<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <title>Students</title>
        <link rel="stylesheet" href="/css/styles.css" type="text/css" />
        <link rel="icon" href="/images/college.svg" type="image/svg+xml">
    </head>

    <body>
        <h1>Students</h1><br>
        <p style="font-size: 20px;"><a href="/students/add">Add Student</a></p>
        <p style="font-size: 20px;"><a href="/">Home</a></p>

        <!-- Table of Students -->
        <table >
            <tr>
                <th>Student ID</th>
                <th>Name</th>
                <th>Age</th>
                <th>Update Action</th>
                <th>Delete Action</th>
            </tr>
            <% student.forEach((student) => { %>
                <tr>
                    <td><%= student.sid %></td>
                    <td><%= student.name %></td>
                    <td><%= student.age %></td>
                    <td><a href="/students/edit/<%= student.sid %>">Update</a></td>
                    <td><a href="/students/delete/<%= student.sid %>">Delete</a></td>
                </tr>
            <% }) %>
        </table>
    </body>
</html>
